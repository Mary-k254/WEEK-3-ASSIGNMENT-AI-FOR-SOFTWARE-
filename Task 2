import tensorflow as tf
(x_train, y_train)pand dims
x_train = x_train.astype('float32') / 255.0
x_test = x_test.astype('float32') / 255.0
x_train = np.expand_dims(x_train, -1) # shape (N,28,28,1)
x_test = np.expand_dims(x_test, -1)


# One-hot labels (Keras can use sparse_categorical_crossentropy too)
num_classes = 10


# Model architecture
model = models.Sequential([
layers.Conv2D(32, (3,3), activation='relu', input_shape=(28,28,1)),
layers.MaxPooling2D((2,2)),
layers.Conv2D(64, (3,3), activation='relu'),
layers.MaxPooling2D((2,2)),
layers.Flatten(),
layers.Dense(128, activation='relu'),
layers.Dropout(0.5),
layers.Dense(num_classes, activation='softmax')
])


model.compile(optimizer='adam', loss='sparse_categorical_crossentropy', metrics=['accuracy'])
model.summary()


# Callbacks
callbacks = [
tf.keras.callbacks.ModelCheckpoint('mnist_cnn.h5', save_best_only=True, monitor='val_accuracy'),
tf.keras.callbacks.EarlyStopping(monitor='val_accuracy', patience=5, restore_best_weights=True)
]


# Train
history = model.fit(x_train, y_train, epochs=15, batch_size=128, validation_split=0.1, callbacks=callbacks)


# Evaluate
test_loss, test_acc = model.evaluate(x_test, y_test, verbose=2)
print('Test accuracy:', test_acc)


# Plot training curves (accuracy)
plt.figure()
plt.plot(history.history['accuracy'], label='train_acc')
plt.plot(history.history['val_accuracy'], label='val_acc')
plt.xlabel('Epoch')
plt.ylabel('Accuracy')
plt.legend()
plt.title('Training and Validation Accuracy')
plt.show()


# Visualize predictions on 5 sample images
import random
indices = random.sample(range(len(x_test)), 5)
sample_images = x_test[indices]
sample_labels = y_test[indices]
preds = model.predict(sample_images)
preds_classes = np.argmax(preds, axis=1)


plt.figure(figsize=(10,3))
for i in range(5):
ax = plt.subplot(1,5,i+1)
plt.imshow(sample_images[i].squeeze(), cmap='gray')
plt.title(f'True:{sample_labels[i]} Pred:{preds_classes[i]}')
plt.axis('off')
plt.show()


# Save final model (SavedModel format)
model.save('mnist_cnn_saved')
